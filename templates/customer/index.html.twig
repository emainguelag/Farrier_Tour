{% extends 'base.html.twig' %}

{% block title %}Customer index{% endblock %}

{% block body %}
    <h1>Clients</h1>
    <p class="lead">Pour gérer les clients.</p>
    <hr />
    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Téléphone fixe</th>
                <th>Téléphone mobile</th>
                <th>Email</th>
                <th>Ville</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for customer in customers %}
            <tr>
                <td>{{ customer.name }}</td>
                <td>{{ customer.phoneNumber }}</td>
                <td>{{ customer.mobilePhone }}</td>
                <td>{{ customer.email }}</td>
                <td>{{ customer.adressCustomer.city }}</td>
                <td>
                    <a href="{{ path('app_customer_show', {'id': customer.id}) }}">Voir</a>
                    <a href="{{ path('app_customer_edit', {'id': customer.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_customer_new') }}">Ajouter un nouveau client</a>
{% endblock %}
