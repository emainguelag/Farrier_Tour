{% extends 'base.html.twig' %}

{% block title %}Horse{% endblock %}

{% block body %}
    <h1>Horse</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ horse.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ horse.name }}</td>
            </tr>
            <tr>
                <th>Nickname</th>
                <td>{{ horse.nickname }}</td>
            </tr>
            <tr>
                <th>BirthDate</th>
                <td>{{ horse.birthDate ? horse.birthDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ horse.type }}</td>
            </tr>
            <tr>
                <th>Sexe</th>
                <td>{{ horse.sexe }}</td>
            </tr>
            <tr>
                <th>Color</th>
                <td>{{ horse.color }}</td>
            </tr>
            <tr>
                <th>Sire</th>
                <td>{{ horse.sire }}</td>
            </tr>
            <tr>
                <th>Transponder</th>
                <td>{{ horse.transponder }}</td>
            </tr>
            <tr>
                <th>Duration</th>
                <td>{{ horse.duration }}</td>
            </tr>
