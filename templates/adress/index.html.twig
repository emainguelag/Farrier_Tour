{% extends 'base.html.twig' %}

{% block title %}Adress index{% endblock %}

{% block body %}
    <h1>Adress index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>FirstLine</th>
                <th>SecondLine</th>
                <th>PostalCode</th>
                <th>City</th>
                <th>Country</th>
                <th>Latitude</th>
                <th>Longitude</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for adress in adresses %}
            <tr>
                <td>{{ adress.id }}</td>
                <td>{{ adress.firstLine }}</td>
                <td>{{ adress.secondLine }}</td>
                <td>{{ adress.PostalCode }}</td>
                <td>{{ adress.city }}</td>
                <td>{{ adress.country }}</td>
                <td>{{ adress.latitude }}</td>
                <td>{{ adress.longitude }}</td>
                <td>
                    <a href="{{ path('app_adress_show', {'id': adress.id}) }}">show</a>
                    <a href="{{ path('app_adress_edit', {'id': adress.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_adress_new') }}">Create new</a>
{% endblock %}
